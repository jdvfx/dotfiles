-- https://wiki.archlinux.org/title/Xmobar

Config {
	font = "xft:Cascadia Mono PL:style=Bold:size=11:bold:antialias=true:hinting=false"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100
        , commands =
	[
		Run MultiCpu
		[ "--template" , "Cpu: <total0>%"
		, "--Low"      , "50"         -- units: %
		, "--High"     , "85"         -- units: %
		, "--low"      , "darkgreen"
		, "--normal"   , "darkorange"
		, "--high"     , "darkred"
		] 50

		-- ram
		, Run Memory ["-t","Mem: <usedratio>%"] 200

		-- time
		, Run Date "%H:%M" "time" 100

		-- date
		, Run Date "%a %b %d" "date" 1000

		-- fans
		, Run Com "/bin/bash" ["-c","cat /sys/devices/platform/applesmc.768/fan*_output | xargs echo"] "fans" 100

		-- battery
		, Run Com "/bin/bash" ["-c","upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep percentage | awk '{print $2}'"] "bats" 1000

		-- stdin from Xmonad (current Window in use)
		, Run StdinReader

		-- cpu temp
		, Run CoreTemp ["-t", "<core0>°|<core1>°","-L", "40", "-H", "60", "-l", "#888888", "-n", "#888888", "-h", "#F65608"] 200

	]
	
        , sepChar = "%"
        , alignSep = "}{"
        , template = "<fc=#888888> %StdinReader%</fc>}{<fc=#555555>%multicpu% . %coretemp% . %fans% . %memory% . %bats% . %date% . </fc><fc=#1ac3ff>%time% </fc>"

        }

