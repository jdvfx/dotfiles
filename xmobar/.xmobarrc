Config { font = "xft:Jetbrains Mono:size=9:bold:antialias=true:hinting=false"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100
        , commands = [    Run Cpu ["-L","5","-H","70","--normal","#888888","--high","#FFAA00"] 50
                        , Run Memory ["-t","Mem: <usedratio>%"] 200
                        , Run Date "%H:%M" "time" 100
                        , Run Date "%b %_d" "date" 1000
                        , Run StdinReader
                        , Run CoreTemp ["-t", "<core0>°|<core1>°","-L", "40", "-H", "60", "-l", "#888888", "-n", "#888888", "-h", "red"] 200
                        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "<fc=#888888> %StdinReader%</fc>}{<fc=#555555>%coretemp% . %cpu% . %memory% . %date%</fc> <fc=#1ac3ff>%time% </fc>"
        }

