Config { font = "xft:JetBrains Mono:size=9:antialias=true:hinting=true"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100 
        , commands = [    Run Cpu ["-L","5","-H","70","--normal","#444444","--high","#FFAA00"] 30
                        , Run Memory ["-t","Mem: <usedratio>%"] 50
                        , Run Swap [] 200
                        , Run Date "%H:%M" "time" 100
                        , Run Date "%b %_d" "date" 1000
                        , Run StdinReader
                        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "<fc=#444444> %StdinReader%</fc>}{<fc=#444444>%cpu% . %memory% . %swap% . %date%</fc> <fc=#1ac3ff>%time% </fc>"
        }

