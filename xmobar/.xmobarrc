Config { font = "xft:JetBrains Mono:size=9:antialias=true:hinting=true"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100
        , commands = [    Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 30
                        , Run Memory ["-t","Mem: <usedratio>%"] 50
                        , Run Swap [] 200
                        , Run Date "%b %_d %H:%M " "date" 100
                        , Run StdinReader
                        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% }{%cpu% <fc=#444444>%memory%</fc> <fc=#444444>%swap%</fc> <fc=#0088FF>%date%</fc>"
        }

