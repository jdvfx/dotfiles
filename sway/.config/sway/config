# not sure that does anything, I can't see the difference

# Thinkpad monitor
output eDP-1 position 0,0
# BenQ monitor
# 1480 is the closest value to: 1920/1.3
output HDMI-A-1 position 1480,0

output eDP-1 scale_filter linear

smart_borders on

